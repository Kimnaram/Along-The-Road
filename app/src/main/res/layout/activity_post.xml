<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InPostActivity" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/handon600"
            android:text="후기 작성"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.example.along_the_road.ClearEditText
            android:id="@+id/post_title_edit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="7dp"
            android:background="@color/basic_color_FFFFFF"
            android:fontFamily="@font/nanumsquare"
            android:hint="리뷰 제목"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:inputType="text"
            android:textColor="@color/basic_color_3A7AFF"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/post_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_btn_style"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumsquare"
            android:textColor="@color/basic_color_3A7AFF"
            android:layout_toRightOf="@+id/post_title_edit"
            android:text="저장"/>

        <EditText
            android:id="@+id/post_contents_edit"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/post_save_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:fontFamily="@font/nanumsquare"
            android:background="@drawable/less_rounded"
            android:textColor="@color/basic_color_3A7AFF"
            android:hint="내용" />

    </RelativeLayout>

</LinearLayout>
