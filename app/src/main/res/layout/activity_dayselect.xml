<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dayselectActivity">

    <TextView
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="50dp"
        android:text="출발 날짜를 설정하세요"
        android:textSize="10pt" />

    <Button
        android:id="@+id/startdate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="80dp"
        android:onClick="OnsclickHandler"
        android:text="날짜 선택하기" />

    <TextView
        android:id="@+id/arrivedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="140dp"
        android:textSize="10pt"
        android:text="도착 날짜를 설정하세요" />

    <Button
        android:id="@+id/arrivedate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="168dp"
        android:onClick="OnaclickHandler"
        android:text="날짜 선택하기" />

</AbsoluteLayout>