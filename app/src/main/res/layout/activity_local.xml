<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".localselectActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역 선택"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/handon600">
                </TextView>
            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="800dp"
                    android:layout_marginLeft="-15dp"
                    android:src="@drawable/map_main" />

                <ToggleButton
                    android:id="@+id/locate_btn_busan"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="289dp"
                    android:layout_marginLeft="289dp"
                    android:layout_marginTop="449dp"
                    android:background="@drawable/loc_busan"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_daegu"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="227dp"
                    android:layout_marginLeft="227dp"
                    android:layout_marginTop="380dp"
                    android:background="@drawable/loc_daegu"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_gangneung"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="283dp"
                    android:layout_marginLeft="283dp"
                    android:layout_marginTop="210dp"
                    android:background="@drawable/loc_gangneung"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_gyeongju"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="311dp"
                    android:layout_marginLeft="311dp"
                    android:layout_marginTop="380dp"
                    android:background="@drawable/loc_gyeongju"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_jeju"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="117dp"
                    android:layout_marginLeft="117dp"
                    android:layout_marginTop="603dp"
                    android:background="@drawable/loc_jeju"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_jeonju"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="103dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="398dp"
                    android:background="@drawable/loc_jeonju"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_seoul"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="92dp"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="247dp"
                    android:background="@drawable/loc_seoul"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_sokcho"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="240dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="154dp"
                    android:background="@drawable/loc_sokcho"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/locate_btn_yeosu"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="119dp"
                    android:layout_marginLeft="119dp"
                    android:layout_marginTop="517dp"
                    android:background="@drawable/loc_yeosu"
                    android:scaleType="fitXY"
                    android:textOff=""
                    android:textOn="" />

                <ImageButton
                    android:id="@+id/local_conf_btn"
                    android:layout_width="133dp"
                    android:layout_height="111dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="234dp"
                    android:layout_marginBottom="0dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/local_conf_btn" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>