<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_color_FFFFFF"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lv_detailInfo_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/handon600"
                    android:text="행사 안내"
                    android:textColor="#ffffff"
                    android:textSize="25dp"></TextView>

            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="#88888888" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/gradient" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="12dp"
                    android:fontFamily="@font/handon600"
                    android:text="Title"
                    android:textColor="#fff" />

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_date_info"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="기간"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_date_data"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="2020.12.15 ~ 2020.12.20"
                        android:textColor="@color/basic_color_73A9FF"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/tv_location_info"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="위치"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_location_data"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text=""
                        android:textColor="@color/basic_color_73A9FF"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/tv_phone_info"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="연락처"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_phone_data"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text=""
                        android:textColor="@color/basic_color_73A9FF"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/tv_host_info"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="주최 / 주관"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_host_data"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text=""
                        android:textColor="@color/basic_color_73A9FF"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/tv_addr_info"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="주소"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_addr_data"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text=""
                        android:textColor="@color/basic_color_73A9FF"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/tv_more_info"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/nanumsquare"
                        android:text="세부사항"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_more_data"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/nanumsquarebold"
                        android:text=""
                        android:textSize="17dp" />

                </LinearLayout>

            </ScrollView>


            <!-- <TextView
                android:id="@+id/detailTextView"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/nanumsquarebold"
                android:textSize="20dp"
                android:text="Detail" />

            <TextView
                android:id="@+id/detailTextView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="info"
                android:fontFamily="@font/nanumsquarebold"
                android:textSize="18dp"/> -->


        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/navigation_item"
            app:itemTextAppearance="@style/NavigationViewStyle"
            app:menu="@menu/navigation_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>